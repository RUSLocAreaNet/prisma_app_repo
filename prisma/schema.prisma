// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./app/db/db.db"
}

model User {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  email     String   @unique
  password  String
  profileId Int?      @unique
  profile   Profile?  @relation()
}


model Profile{
    id        Int   @id @default(autoincrement()) 
    user      User  @relation(fields:[userId], references:[id])
    userId    Int   @unique
    firstName String
    lastName  String
}

enum Emoji {
  THUMBSUP
  PARTY
  HANDSUP
}

enum Department {
  MARKETING
  SALES
  ENGINEERING
  HR
}

enum Color {
  RED
  GREEN
  YELLOW
  BLUE
  WHITE
}

model KudoStyle {
  id              Int @id 
  backgroundColor String CHECK(backgroundColor in "RED", "GREEN", "YELLOW", "BLUE", "WHITE") @default ("BLUE")
  textColor       String CHECK(textColor in "RED", "GREEN", "YELLOW", "BLUE", "WHITE") @default ("WHITE")
  emoji            String CHECK(emoji in "THUMBSUP", "PARTY", "HANDSUP") @default ("THUMBSUP")
  kudos           Kudo[] @relation
}

model Kudo {
  id          Int     @id @default(autoincrement())
  message     String
  createdAt   DateTime   @default(now())
  styleId     Int       
  style       KudoStyle?  @relation(fields: [styleId], references: [id])
}